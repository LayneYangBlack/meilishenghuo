<body>
<div id="wrap">

        <div class="liutong">
            <div class="liutong1">
                <div>许可证名称<span style="color:#ff9933;">*</span></div>
                <span style="color:#9296a3;font-size:1rem;float: left;padding-top: 2px;">公司名称需同营业执照一致</span>
            </div>
            <input type="text" style="width: 135px;" id="specialLicenseName" placeholder="如：食品流通许可证" class="permission_name">
            <img class="jiantou" src="../../icon/icon_right_normal.png" alt="">
        </div>
    <div id="main">
        <div class="box_2">
            <div class="yyzzmid">
                <img style="float:left;" src="" id="specialLicense" alt="" />
                <img style="float: right;" src="" id="specialLicenseCopy" alt="" />
            </div>
            <div class="xuanzephoto">
                <div class="photo">
                    <div class="photo1">
                        营业执照原件
                    </div>
                    <input type="button" onclick="getImgUrl('specialLicense');" value="选择照片">
                </div>
                <div class="photo" style="float:left;">
                    <div class="photo2" style="">
                        复印件+加盖公章+法人签字
                    </div>
                    <input type="button" onclick="getImgUrl('specialLicenseCopy');" value="选择照片">
                </div>
            </div>
            <div id="foot">
                说明:1、许可证复印件<span style="color: #ff9900;">加盖公章</span>;&nbsp2、确保照片中字体清晰。
            </div>
        </div>
    </div>
        <div id="jhzxfooter" onclick="commit()">
        提交
    </div>


</div>

<script type="text/javascript" src="../../script/api.js"></script>
<script type="text/javascript" src="../../script/template-native.js"></script>
<script type="text/javascript" src="../../script/kv.js"></script>
<script type="text/javascript" src="../../script/user.js"></script>
<script type="text/javascript" src="../../script/data.js"></script>
<script type="text/javascript" src="../../script/util.js"></script>
<script type="text/javascript" src="../../script/apiCloud.js"></script>
<script type="text/javascript" src="../../script/public.js"></script>
<script>
    var imgType = null;
    var specialLicense  =null;
    var specialLicenseCopy = null;
    apiready = function(){
        var shopInfo = api.pageParam;
        if(isNotBlack(shopInfo.specialLicenseName)){
            showValue(shopInfo);
        }
    }


    function commit(){
        var specialLicenseName = document.getElementById("specialLicenseName").value;
        var parms = {};
        if(isBlack(specialLicenseName)){
            toast("证件名称不能为空！");
            return;
        }

        parms.legalPersonName = specialLicenseName;
        if(isBlack(specialLicense)){
            toast("你还没有上传证件原照");
            return;
        }
        parms.specialLicense = specialLicense;

        if(isBlack(specialLicenseCopy)){
            toast("你还没有上传证件背面照");
            return;
        }
        parms.specialLicenseCopy = specialLicenseCopy;
        parms.type = "license";



        //异步调用
        api.execScript({
            name:'mallInfo',
            frameName: 'mallInfo_body',
            script: 'changeStatus('+JSON.stringify(parms)+')'
        });
        closeWin();
    }



    function showValue(data){
        if(isNotBlack(data.specialLicenseName)){
            document.getElementById("specialLicenseName").value = data.specialLicenseName;
        }

        if(isNotBlack(data.specialLicense)){
            document.getElementById("specialLicense").src = data.specialLicense;
            specialLicense = data.specialLicense;
        }

        if(isNotBlack(data.legalPersonBackIdCard)){
            document.getElementById("specialLicenseCopy").src = data.specialLicenseCopy;
            specialLicenseCopy = data.specialLicenseCopy;
        }
    }

    function getImgUrl(type){
        imgType = type;
//        openNewWindow("uploadImg","../mall/uploadImg.html",{toPX:200,toPY:150,toNm:'imgName',winHtml:api.winName});
        updateImageClip(200,150,'../main/imgClip.html');
    }

    function setImgUrl(data){
        if(imgType == "specialLicense"){
            specialLicense = data;
        }else{
            specialLicenseCopy = data;
        }
        document.getElementById(imgType).src = data;
    }
</script>
</body>
</html>