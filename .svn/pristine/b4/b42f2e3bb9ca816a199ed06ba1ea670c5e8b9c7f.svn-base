<script>
    var dialogBox;
    var allResult ={};
    var left =null;
    var user = null;
    apiready = function () {
        api.showProgress({title: '努力加载中...',text: '先喝杯茶...'});
        dialogBox = api.require('dialogBox');
        left = api.width;
        user = api.pageParam.user;
        ajaxGetWithProgress(rewardGetListUrl,{},addDataToHtml);
        checkPasswordSetting();
         api.hideProgress();
    };

    var checkPasswordFlag = false;
    function checkPasswordSetting(){
        ajaxGetWithProgress(rewardExistPasswordUrl,{},function(ret){
            if(isNotBlack(ret)){
                if(!ret.exist){
                    dialogBox.alert({
                        texts: {
                            title: '提示',
                            content:'先设置账户密码！',
                            leftBtnTitle: '取消',
                            rightBtnTitle: '设置'
                        },
                        styles:{
                            bg: '#fff',
                            w: 250,
                            title:{
                                marginT : 20,
                                titleSize : 18,
                                titleColor : '#76CA78'
                            },
                            content:{
                                color: '#000',
                                size: 14
                            },
                            left:{
                                marginB: 0,
                                marginL: 0,
                                w: 125,
                                h: 40,
                                color:'#000000',
                                corner: 0,
                                bg: '#f1f2f3',
                                size: 16
                            },
                            right:{
                                marginB: 0,
                                marginL: 0,
                                w: 125,
                                h: 40,
                                corner: 0,
                                bg: '#76CA78',
                                size: 16,
                                color:'#ffffff'
                            }
                        }
                    },function(ret){
                        if (ret.eventType == 'left') {
                            var dialogBox = api.require('dialogBox');
                            dialogBox.close ({
                                dialogName: 'alert'
                            });
                        }else if(ret.eventType == 'right'){
                            openNewWindow('setPassword','./setPassword.html',{})
                            var dialogBox = api.require('dialogBox');
                            dialogBox.close ({
                                dialogName: 'alert'
                            });
                        }
                    });
                }else{
                    checkPasswordFlag = true;
                }
            }
        })
    }


    function addDataToHtml(results) {
        if (results && results.length > 0) {
            for (var i = 0; i < results.length; i++) {
                allResult[results[i].id] = results[i];
            }
            var data = {list: results,beanNum:user.remainGoldBean};
            var html = template('scriptDiv', data);

            document.getElementById('main').innerHTML = html;

        }

    }





    //选择兑换金豆
    function selectBeanType(id){

        if(!checkPasswordFlag){
            checkPasswordSetting();
        }
        if(checkPasswordFlag){
            var beanInfo = allResult[id];
            if(user.remainGoldBean < beanInfo.goldBean){
                showDialog();
            }else{
                if(user.attestIdCard != attest_access){
                    dialogBox.alert({
                        texts: {
                            title: '提示',
                            content:'你还没有认证身份，请先进行身份认证证！',
                            leftBtnTitle: '取消',
                            rightBtnTitle: '去认证'
                        },
                        styles:{
                            bg: '#fff',
                            w: 250,
                            title:{
                                marginT : 20,
                                titleSize : 18,
                                titleColor : '#76CA78'
                            },
                            content:{
                                color: '#000',
                                size: 14
                            },
                            left:{
                                marginB: 0,
                                marginL: 0,
                                w: 125,
                                h: 40,
                                color:'#000000',
                                corner: 0,
                                bg: '#f1f2f3',
                                size: 16
                            },
                            right:{
                                marginB: 0,
                                marginL: 0,
                                w: 125,
                                h: 40,
                                corner: 0,
                                bg: '#76CA78',
                                size: 16,
                                color:'#ffffff'
                            }
                        }
                    },function(ret){
                        if (ret.eventType == 'left') {
                            var dialogBox = api.require('dialogBox');
                            dialogBox.close ({
                                dialogName: 'alert'
                            });
                        }else if(ret.eventType == 'right'){
                            openNewWindow("idAuthentification",'./idAuthentification.html',{user:user});
                            var dialogBox = api.require('dialogBox');
                            dialogBox.close ({
                                dialogName: 'alert'
                            });
                            closeWin();
                        }
                    });
                }else{
                    openNewWindow('selectCount','./selectCount.html',{beanInfo:beanInfo,user:user});
                }

            }
        }


    }


    function showDialog(){

        dialogBox.alert({
            texts: {
                title: '提示',
                content:'官人，金豆不足，再去挣点吧，加油！',
                leftBtnTitle: '取消',
                rightBtnTitle: '赚金豆'
            },
            styles:{
                bg: '#fff',
                w: 250,
                title:{
                    marginT : 20,
                    titleSize : 18,
                    titleColor : '#76CA78'
                },
                content:{
                    color: '#000',
                    size: 14
                },
                left:{
                    marginB: 0,
                    marginL: 0,
                    w: 125,
                    h: 40,
                    color:'#000000',
                    corner: 0,
                    bg: '#f1f2f3',
                    size: 16
                },
                right:{
                    marginB: 0,
                    marginL: 0,
                    w: 125,
                    h: 40,
                    corner: 0,
                    bg: '#76CA78',
                    size: 16,
                    color:'#ffffff'
                }
            }
        },function(ret){
            if (ret.eventType == 'left') {
                var dialogBox = api.require('dialogBox');
                dialogBox.close ({
                    dialogName: 'alert'
                });
            }else if (ret.eventType == 'right') {
                var dialogBox = api.require('dialogBox');
                dialogBox.close ({
                    dialogName: 'alert'
                });
                closeWin();
                }

        });
    }

    function openSelectCount(){
        openNewWindow("selectCount","./selectCount.html",{reward:allResult[i]})
    }





</script>
