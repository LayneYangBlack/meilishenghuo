<script id="scriptDiv" type="text/html">
    <% for (var i = 0; i < list.length; i ++) { %>
    <div class="item" onclick="openUserDetail('<%=list[i].id%>')">
        <div class="left_box">
            <img class="icon" src="../../image/defaultCover@2x.png" data-echo="<%=list[i].icon%>" >
        </div>
        <div class="center_box">
            <div class="name">
                <%=list[i].name%> <img src="<%=list[i].sexIcon%>">
            </div>
            <div class="local">
                <span><%=list[i].nativePlace%></span>
            </div>
        </div>
        <div class="right" >
            <div class="time"><%=list[i].winTime%></div>
        </div>
        <div style="clear: both;"></div>
    </div>

    <% } %>

</script>
