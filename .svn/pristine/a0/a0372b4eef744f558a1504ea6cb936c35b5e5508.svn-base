    <style>
        section {
            float: right;
            padding: 10px 0 0 60px;;
            width:75px;
           margin-right: 6%;
        }

        .checkbox::after, .checkbox::before {
            font-family: FontAwesome;
            font-feature-settings: normal;
            font-kerning: auto;
            font-language-override: normal;
            font-stretch: normal;
            font-style: normal;
            font-synthesis: weight style;
            font-variant: normal;
            font-weight: normal;
            text-rendering: auto;
        }

        .checkbox {
            display: inline-block;
            position: relative;
        }

        .checkbox input {
            cursor: pointer;
            height: 100%;
            left: 0;
            opacity: 0;
            position: absolute;
            top: 0;
            width: 100%;
            z-index: 5;

        }
        /*默认背景颜色*/
        .model-3 .checkbox label{
            background: #75ca77 none repeat scroll 0 0;
            border: 1px solid #eee;
            height: 30px;
        }
        .model-3 .checkbox label::after{
            background: #fff none repeat scroll 0 0;
            border: 1px solid #eee;
            height: 30px;
        }
      /*按钮默认位置  和颜色*/
        .model-3 .checkbox label::after {
            background: #fff none repeat scroll 0 0;
            height: 25px;
            left: 36px;
            top: 1.45px;
            width: 25px;
        }
        .checkbox label::after {

            border-radius: 100%;
            /*box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);*/
            content: "";
            height: 30px;
            left: 0;
            position: absolute;
            top: -2px;
            transition: all 0.4s ease 0s;
            width: 30px;
            z-index: 2;
        }

        .checkbox label {
            background:  #f1f2f3 repeat scroll 0 0;
            border-radius: 46px;
            display: inline-block;
            height: 25px;
            position: relative;
            transition: all 0.4s ease 0s;
            width: 65px;
        }
        .model-3 .checkbox input:checked + label::after {
            background: #ccc none repeat scroll 0 0;
            left: 1px;
        }
        .tijiao{text-align:center;line-height: 0.5rem;font-size: 18px;}
        .tijiao a{color: white;display: block;text-align: center;}
           a:hover, a:visited, a:link, a:active {text-decoration: none;color: #f1f2f3;}
    </style>




</head>
