<script id="scriptDiv" type="text/html">
    <div class="item">
            <span class="header_verticle9">
					<%=list.title%>
            </span>
        <div class="input">
            <span class="header_span"><img class="icon_left" src="../../icon/shop_icon.png" alt=""></span>
            <span class="header_title"><%=list.shopName%></span>
        </div>
        <div class="input" onclick="">
            <img class="icon_left" src="../../icon/phone_icon.png" alt="">
            <span class="header_title"><%=list.shopPhone%></span>

        </div>
        <div class="input" onclick="">

            <img class="icon_left" src="../../icon/address@2x.png" alt="" style="">
            <span class="header_title"><%=list.shopAddress%></span>


        </div>
        <div class="input">
            <div class="header_verticle" style="text-align:center;"> <span class="header_number_1"><%=list.goldBean%></span>金豆/份&nbsp;剩余<span class="header_number_2"><%=list.totalGoldBean%></span>份 </div>
        </div>
    </div>
    <div class="item item_margin">
        <span class="content_verticle">
            <%=list.content%>
        </span>
    </div>
    <% var question = list.questions%>
    <%for(var i = 0; i< question.length;i++){%>
    <div class="item item_margin">
        <div class="input border_bot">
            <span class="topic">题目<%=i+1%></span>
            <span class="main_title"><%=question[i].content%></span>
        </div>
        <div class="input border_bot" onclick=""><span>A、</span><span class="option"><%=question[i].options.A%> </span></div>
        <div class="input border_bot" onclick=""><span>B、</span><span class="option"><%=question[i].options.B%> </span></div>
        <div class="input border_bot" onclick=""><span>C、</span><span class="option"><%=question[i].options.C%> </span></div>
        <div class="input border_bot" onclick=""><span>D、</span><span class="option"><%=question[i].options.D%></span></div>
        <div class="input border_bot" onclick=""><span>答案</span><span class="option answer"><%=question[i].rightOption%>、<%=question[i].options[question[i].rightOption]%> </span></div>
    </div>
    <%}%>
</script>
<script type="text/javascript">
    function openActivityDetail(){
        openNewWindow("activityDetail","./activityDetail.html")
    }

    var activity = null;
    apiready = function () {
        api.showProgress({title: '努力加载中...',text: '客官请稍等...'});
        activity = api.pageParam;
        var user = getUserInfo();
        activity.shopName = user.shopName;
        activity.shopPhone = user.shopPhone;
        activity.shopAddress = user.shopAddress;
        var html = decodeURIComponent(activity.content);
        activity.content = html;
        var question = activity.questions;
        for(var i =0;i< question.length;i++){
            question[i].options = JSON.parse(question[i].options);
        }
        activity.questions = question;
        var data = {list: activity};
        var html1 = template('scriptDiv', data);
        document.getElementById('main').innerHTML =html1;
        api.hideProgress();

    };


</script>
