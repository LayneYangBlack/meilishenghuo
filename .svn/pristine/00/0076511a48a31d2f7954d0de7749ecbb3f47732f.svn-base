<script type="text/html" id="scriptDiv">
    <div style="height:<%=height%>px; ">        <img style="margin-bottom:<%=margin%>px;width: 100%;"  src="<%=list%>">               </div>
</script>
<script>
    var selectType = 'video';
    var duration = 5;
    var interest=null;
    var totalCost = null;
    var dialogBox;
    var imgIndex = 0;
    var uploadFlag = true;
    var uploadIndex = 0;
    var margin = null;
    apiready =function(){
        dialogBox = api.require('dialogBox');
        //调取展位
        var showPrice = $api.getStorage("showPrice");
        document.getElementById("price").innerHTML = showPrice;
        document.getElementById("selectButton").style.height = api.frameWidth*0.22+"px";
        checkCount();
        document.getElementById("body").style.display = "block";

    };
    /**
     * 上下裁剪图片
     *
     * c:屏幕百分比（计算宽度）
     * m:补白（计算宽度）
     * src:图片原始路径 (计算高度)
     * p:百分比（计算高度和补白）
     */
    function getMargin(c,m,src,p) {
        m = m || 0;
        var width = Math.round((api.frameWidth )*p);
        var imgRealHeight = getWidthAndHeightByImageSrc(src, width).h;
        if (imgRealHeight > (width * p)) {
            return (0 - Math.round((imgRealHeight - width) / 2));
        } else {
            return 0;
        }
    }


    function selectPublishType(self,type){
        selectType = type;
        var item = document.getElementById('nav').querySelectorAll('li');
        var ss =  document.getElementById("nav").querySelectorAll("p");
        for(var i=0;i<item.length;i++){
            item[i].className = "";
            ss[i].style.color="#000";
            item[i].style.border="none"
        }
        document.getElementById(type).style.display = 'block';
        if(type == "video"){
            document.getElementById('imageText').style.display = 'none';
            self.className = "nav1";
            self.querySelector("p").style.color="#fff";
            document.getElementById('bq1').style.borderBottom ="1px solid #eaeaea";


        }else{
            document.getElementById('video').style.display = 'none';
            self.className = "nav1";
            self.querySelector("p").style.color="#fff";
            document.getElementById('bq2').style.borderBottom = '1px solid #eaeaea';

        }


    }
    function openPublishSelectCondition(){
        openNewWindow("publishSelectCondition","./publishSelectCondition.html")
    }

    function box1_Hide(){
        document.getElementById("bg_1").style.display="none";
        document.getElementById("show_1").style.display="none";
        document.getElementById('input_title').value ="";
    }

    var boxType = null;
    function showBox(type){
        boxType = type;
        document.getElementById("bg_1").style.display="block";
        document.getElementById("show_1").style.display="block";
    }

    function confirmInput(){
        var target = document.getElementById(boxType);
        var src = document.getElementById('input_title').value;
        if(isNotBlack(src)){
            target.innerHTML = src;

        }
        checkCount();
        box1_Hide();
    }

    function size(par){
        var max = 300;
        if (par.value.length < max)
            var str = max - par.value.length;
        document.getElementById("span").innerHTML = str.toString();
    }

    var selectImgList = [];
    function selectImgUpload(){
        if(imgIndex >=12){
            toast('已经超过12张了');
            return;
        }
        openImage(12-imgIndex,true,function(ret){
            if(isNotBlack(ret) && ret.status){
                imgIndex = imgIndex + ret.data.length;
                uploadIndex = 0;
                selectImgList = ret.data;
                uploadFlag = true;
                uploadImg()
            }
        })
    }


    function uploadImg(){
        //压缩图片
        if(uploadIndex == selectImgList.length ){
            return;
        }

        if(uploadIndex == selectImgList.length - 1){
            uploadFlag = false;
        }
        var data = selectImgList[uploadIndex];
        api.showProgress({title: '努力压缩...',text: '先喝杯茶...'});
        compressImage(data.size,0,data.path,function(ret,err){
            if(ret.status){
                _uploadImg(ret.path,showImage,0);
            }
        });
    }


    function checkCount(){
        var price = document.getElementById("price").innerHTML;

        if(isBlack(price)|| !isNum(price)){
            return;
        }

        if(isNotBlack(duration)){
            price = parseInt(price);
            var total = parseInt(duration)*price;
            document.getElementById("totalPrice").innerHTML = total+"元";
            totalCost = total;
        }
    }



    function _uploadImg(path,callback,type) {
        if(isNotBlack(type)&&type == 1){
            api.showProgress({title: '正在上传视频....',text: '先喝杯茶...'});
        }else{
            api.showProgress({title: '上传第'+(uploadIndex+1)+"张",text: '先喝杯茶...'});
        }

        api.ajax({
            url: uploadImageUrl,
            method: 'post',
            timeout: 120,
            report: true,
            dataType: 'json',
            returnAll: false,
            data: {
                files: {file:path}
            }
        }, function (ret, err) {
            if(ret.status == 1){
                if(isFunction(callback)){
                    callback(ret,path);
                }
            }

        });
    }

    var imgList = [];
    function showImage(ret,path){
        var srcList = ret.body.ok;
        imgList.push(srcList);
        margin = getMargin(1,0,srcList,0.22);
        var data = {list:selectImgList[uploadIndex].thumbPath,margin:margin,height:api.frameWidth*0.22};
        var html1 = template('scriptDiv', data);
        document.getElementById('imageList').innerHTML = document.getElementById('imageList').innerHTML + html1;
        document.getElementById("selectNum").innerHTML = imgIndex;
        uploadIndex++ ;
        uploadImg();
        if(!uploadFlag){
            api.hideProgress();
        }
    }
//    selectImgList[uploadIndex].thumbPath,margin:margin,
    function openShopInterest(){
        openNewWindow('shopInterest','./shopInterest.html',{type:'publishScore'});
    }

    function showInterest(data){
        interest = data.ids;
        if(interest == 0){
            document.getElementById("interest").innerHTML = "<p>不限</p>";
            return;
        }
        var list = data.list;
        var text = "";
        for(var i = 0; i < list.length;i++){
            if(list[i].parentId != 0){
                text = text +"<p>"+list[i].name +"</p>";
            }
        }

        document.getElementById("interest").innerHTML = text;
    }

    function selectVideo(){
        openVideo(gotoUpload);

    }

    var videoCover = null;
    function gotoUpload(ret){
        if(ret.status){
            api.showProgress({title: '努力上传中...',text: '先喝杯茶...'});
            var data = ret.data;
            _uploadImg(data[0].path,showVideo,1);
            _uploadImg(data[0].thumbPath,function(ret){
                videoCover =ret.body.ok;
            },1);
        }else{
            toast('你没有选择视频！');
        }

    }

    var videoSrc = null;
    var videoTime = null;
    function showVideo(ret){
        videoSrc = ret.body.ok;
//        videoTime = ret.body.
        document.getElementById("videoImg").src = videoCover;
        api.hideProgress();

    }

    //todo 提炼一个框架
    (function($, doc) {
        $.init();
        $.ready(function () {
            var data  = [{value: '1',
                text: '1天'
            },{value: '2',
                text: '2天'
            },{value: '3',
                text: '3天'
            },{value: '4',
                text: '4天'
            },{value: '5',
                text: '5天'
            },{value: '6',
                text: '6天'
            },{value: '7',
                text: '7天'
            },{value: '8',
                text: '8天'
            },{value: '9',
                text: '9天'
            },{value: '10',
                text: '10天'
            },{value: '11',
                text: '11天'
            },{value: '12',
                text: '12天'
            },{value: '13',
                text: '13天'
            },{value: '14',
                text: '14天'
            },{value: '15',
                text: '15天'
            }];
            //普通示例
            var datePicker = new $.PopPicker();
            datePicker.setData(data);
            datePicker.setTitle("展期");
            var showDatePickerButton = doc.getElementById('date');
            var dateResult = doc.getElementById('dateResult');
            showDatePickerButton.addEventListener('tap', function (event) {
                datePicker.show(function (items) {
                    dateResult.innerHTML = items[0].text;
                    //返回 false 可以阻止选择框的关闭
                    //return false;
                    duration = items[0].value;
                    checkCount();
                });
            }, false);
        })
    })(mui, document);

    var flag = false;
    //检查传值
    function checkParams(){
        var price = parseInt(document.getElementById('price').innerHTML);
        var params = {};
        if(isBlack(price)||!isNum(price)){
            toast("价格没输入或者你输入的不是数字");
            flag = false;
            return;
        }

        params.price = price;
        var title = document.getElementById("title").innerHTML;
        if(isBlack(title)){
            toast("你还没有输入标题");
            flag = false;
            return;
        }
        params.title = title;
        if(isBlack(duration)){
            toast("你还没有输入展期");
            flag = false;
            return;
        }

        params.duration = duration;



        if(isBlack(totalCost)){
            toast("总价格不能为空");
            flag = false;
            return;
        }
        params.totalPrice = totalCost;

        if(selectType == "video"){
            if(isBlack(videoSrc)){
                flag = false;
                toast("你还没有上传视频");
                return;
            }
            params.type = 2;
            var videoContent = {};
            videoContent.videoSrc = videoSrc;
            videoContent.videoCover = videoCover;
            params.content = JSON.stringify(videoContent);
            params.cover = videoCover;
        }

        if(isBlack(interest)&&interest!=0){
            toast("你还没有选择兴趣");
            return;
        }

        params.interestIds = interest;

        if(selectType == "imageText"){
            if(isBlack(imgList)||!isArray(imgList)){
                flag = false;
                toast("你还没有上传图片");
                return;
            }
            params.type = 1;
            var imageContent = {};
            var textContent = document.getElementById("textContent").value;
            imageContent.imgList = imgList;
            if(isNotBlack(textContent)){
                imageContent.content = textContent;
            }
            params.content = JSON.stringify(imageContent);
            params.cover = imgList[0];
        }

        flag = true;

        return params;

    }



    function commit(){
        var params = checkParams();
        if(flag){
            ajaxGetWithProgress(createScoreUrl,params,function(ret){
                if(isNotBlack(ret) && ret.success){
                    toast("提交成功！");
                    showDialog();
                }

            })
        }

    }



    function showDialog(){

        dialogBox.alert ({
            texts: {
                title: '提示',
                content:'提交成功！我们将在48小时内审核完胜，请耐心等待',
                rightBtnTitle: '确定'
            },
            styles:{
                bg: '#fff',
                w: 300,
                title:{
                    marginT : 20,
                    titleSize : 18,
                    titleColor : '#76CA78'
                },
                content:{
                    color: '#000',
                    size: 16
                },
                right:{
                    w: 300,
                    h: 40,
                    marginL: 0,
                    marginB: 0,
                    corner: 0,
                    bg: '#76CA78',
                    size: 18,
                    color:'#ffffff'
                }
            }
        },function(ret){
            if (ret.eventType == 'right') {
                var dialogBox = api.require('dialogBox');
                dialogBox.close ({
                    dialogName: 'alert'
                });

                api.closeWin({
                    name: 'selectPublishType'
                });
                api.execScript({
                    name: 'mallDetail',
                    frameName:'mallDetail.body',
                    script: 'window.location.reload();'
                });
                closeWin()
            }
        });
    }
</script>

</html>