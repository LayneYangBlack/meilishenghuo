<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Document</title>
    <!--<link rel="stylesheet" type="text/css" href="../../css/api.css"/>-->
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
</head>
<style>
   *{margin: 0;padding: 0;}
   	body{
   		height: 100%;
   	}
    html{
        font-size: 10px;
        overflow: hidden;
        background: #f1f2f3;
        height: 100%;
    }
    #shouji{
        width: 100%;
        height: 5.5rem;
        margin-top: 1.5rem;
        outline: none;
        float: left;
    }
    #yanzhengma{
        width: 40%;
        /*height: 5.5rem;*/
        outline: none;
        float: left;
        margin-left: 16%;
        text-align: left;
        color:#333;
        border-left:0px;border-top:0px;border-right:0px;border-bottom:1px;
        font-size: 16px;
        line-height: 25px;
    }
    #fasong{
        width: 36%;
        float: right;
        height: 3.6rem;
        background: #ff9900;
        text-align: center;
        line-height: 3.6rem;
        font-size: 18px;
        color: #ffffff;
        margin-top: 5px;
        margin-bottom: 5px;
        margin-right: 4%;
    }
    #zhanghaomima{
        background: #fff;
        margin-top: 0.1rem;
    }
    #shoujihao{
        width: 100%;
        height: 5.5rem;
        background: url(../../icon/user/phone.png) 6.5% 19px no-repeat;
        background-size:1.4rem 2.4rem;
    }
    #foot{
        width: 100%;
        height: 50px;
        background: #75ca77;
        text-align: center;
        line-height: 50px;
        font-size: 18px;
        color: #fff;
        margin-top: 250px;
    }
    .yzm{
        position: relative;
        overflow:hidden;
        background: url(../../icon/user/num@icon.png) 6.5% 13px no-repeat;
        background-size:2.1rem 2.3rem;
    }
    .xiantiao{
        width:84%;background:#e8e8e8;height:1px;position:absolute;right:0;
    }
    .ipt1{
        line-height: 25px; width:84%;float:right;font-size:16px;color:#333;outline:none;border-left:0px;border-top:0px;border-right:0px;border-bottom:0.01rem;text-align: left;margin-top: 10px;
    }
    #input_password{
        width: 252px;
        margin: 5px auto;
    }
    .virbox{
		overflow: hidden;
        display:block;
    }
    .virbox span{
        width:40px;
        height:40px;
        display:block;
        border:1px solid #ccc;
        float:left;
        font-size: 1;
        font-weight: 800;
        border-right:0 none;
        text-align:center;
        line-height:40px;
        font-family:"microsoft yahei";
        font-weight:bold;
    }
    .virbox span:nth-child(6){
        border:1px solid #ccc;
    }
    .realbox{
        width:10px;
        height:10px;
        display:block;
        position:fixed;
        top:-30px;
        left:-30px;
    }
    .mimashuru{
        width: 100%;padding-top:1rem;height:10rem;background:#fff;margin-top:2rem;
    }
    input {
        border-top: 1px solid #999;
        border-bottom: 1px solid #999;
        border-left: 1px solid #999;
        width: 45px;
        height: 45px;
        outline:none;
        font-family: inherit;
        font-size: 28px;
        font-weight: inherit;
        text-align: center;
        line-height: 45px;
        color: #c2c2c2;
        background: rgba(255,255,255,0);
    }
    .dian{
        width: 10px;
        height: 10px;
        background: #333;
        border-radius: 14px;
        margin: 15px 15px;
    }
     #main {
	        -webkit-box-flex: 1;
	        -webkit-flex: 1;
	        flex: 1;
	    }
     #wrap {
        height: 100%;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-orient: vertical;
        -webkit-flex-flow: column;
        flex-flow: column;
    }
</style>
<body>
	<div id="wrap">		
	<div id="main">
<div style="background:#fff;position:relative;">
    <div id="shoujihao">
        <input type="text" placeholder="手机号" value="" class="ipt1">
    </div>
    <div class="xiantiao"style=""></div>
    <div id="zhanghaomima">
        <div class="yzm">
            <input type="text" id="yanzhengma">
            <span id="fasong">获取验证码</span>
        </div>
    </div>
</div>
<div class="mimashuru" style="">
    <div id="input_password">
        <div class='virbox' id="virbox">
            <span class="password"></span>
            <span class="password"></span>
            <span class="password"></span>
            <span class="password"></span>
            <span class="password"></span>
            <span class="password"></span>
        </div>
    </div>
</div>
<input type="number"  id="realbox" class="realbox" >
</div>
<div id="foot">
    保存密码
</div>
</div>
</body>
<script>
    
    var fasong=document.getElementById('fasong');
    var i=121;
    var time=null;
    var aa=1;
    function jishi(){
        aa=0;
        var bb=0;
        time=setInterval(function(){
            i--;
            console.log(i)
            fasong.style.fontSize=1.3+"rem";
            fasong.style.background="#999";
            fasong.innerHTML="<span>"+i+"秒后可再次获取"+"</span>";
            if (i<=0) {
                clearInterval(time);
                fasong.innerHTML="获取验证码";
                fasong.style.fontSize=1.8+"rem";
                fasong.style.background="#ff9900";
                bb=1;
                i=121
            }
            aa=bb;

        },1000);
    }
    setInterval(function  () {
        if (aa==1) {
            fasong.addEventListener('click',jishi,false);
        }else{
            fasong.removeEventListener('click',jishi,false);
        }

    },1)
    var foot=document.getElementById("foot");
    var virbox = document.getElementById("virbox");
    var realbox = document.getElementById("realbox");
    var spanList = document.getElementsByClassName("password");
    virbox.onclick=function(){
        realbox.focus();
        for(var i= 0;i<spanList.length;i++){
            spanList[i].style.backgroundColor="#FFFECF"
            foot.style.display="none";

        }

    };
    realbox.onblur=function(){
        for(var i= 0;i<spanList.length;i++){
            spanList[i].style.backgroundColor="#ffffff"
        }
    };
    //var realboxStart = 0;
    realbox.onkeyup=function(){
        for(var i = 0;i<spanList.length;i++){
            spanList[i].innerHTML=""
        }
        var realboxLength = Number(realbox.value.length);
        if(realboxLength>6){
            realbox.value = realbox.value.slice(0,6);
            realboxLength = 6;
        }
        for(var i=0;i<realboxLength;i++){
            var words = realbox.value;
            if(words.length==6){
                foot.style.display="block";
            }
            spanList[i].innerHTML='<div class="dian"></div>';
        }
    };
</script>
	