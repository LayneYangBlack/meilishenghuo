<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="utf-8">
    <meta name="viewport"
          content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <title>职业选择</title>
    <link rel="stylesheet" type="text/css" href="../../css/api.css"/>
    <style type="text/css">
        .title{
            font-size: 16px;
            color: #B3B3B3;
            height: 30px;
            line-height: 30px;
            border-bottom: solid 0.5px #EDEDED;
            padding-top: 10px;
            padding-left: 10px;
        }
        .title span{
            font-size: 18px;
            color: #FF9829;
        }
        html {
            width: 100%;
            height: 100%;
        }

        body {
            background: #ffffff;
            width: 100%; 
            min-height: 100%;
        }
        ul li{
            float: left;
            width: 24.3%;
            text-align: center;
            border: solid 1px #DBDBDB;
            background-color: #BCD6A4;
            height: 60px;
            font-size: 14px;
            line-height: 30px;
            color: #333;
        }
        h4{
            margin-left: 10px;
            color: #9296a3;
            font-weight: normal;
            font-size: 14px;
        }
        .item{
            margin: 10px 0;
        }


        #question{
            position: fixed;
            height: 50px;
            color: #ffffff;
            text-align: center;
            background-color: #BCD6A4;
            margin: 10px 0 0 0 ;
            line-height: 50px;
            font-size: 18px;
            width: 100%;
            bottom: 0;
        }
    </style>
</head>
<body>
<div id="main">
    <div class="item">
        <h4>财务|人力资源|行政</h4>
        <div>
            <ul>
                <li>财务/审计/税务</li>
                <li>人力资源</li>
                <li>行政/后勤/文秘</li>
                <li></li>
            </ul>
        </div>
        <div style="clear: both"></div>
    </div>
    <div class="item">
        <h4>销售|客服|市场</h4>
        <div>
            <ul>
                <li>销售业务</li>
                <li>销售管理</li>
                <li>销售行政/商务</li>
                <li>客服/售前/售后技术支持</li>
                <li>市场</li>
                <li>公关/媒介</li>
                <li>广告/会展</li>
                <li></li>
            </ul>
        </div>
        <div style="clear: both"></div>
    </div>

    <div class="item">
        <h4>IT|互联网|通信</h4>
        <div>
            <ul>
                    <li>销售业务</li>
                    <li>销售管理</li>
                    <li>销售行政/商务</li>
                    <li>客服/售前/售后技术支持</li>
                    <li>市场</li>
                    <li>公关/媒介</li>
                    <li>广告/会展</li>
                    <li></li>
            </ul>
        </div>
        <div style="clear: both"></div>
    </div>
</div>
<script type="text/javascript" src="../../script/api.js"></script>
<script type="text/javascript" src="../../script/template-native.js"></script>
<script type="text/javascript" src="../../script/kv.js"></script>
<script type="text/javascript" src="../../script/user.js"></script>
<script type="text/javascript" src="../../script/data.js"></script>
<script type="text/javascript" src="../../script/util.js"></script>
<script type="text/javascript" src="../../script/apiCloud.js"></script>
<script type="text/javascript" src="../../script/public.js"></script>
<script type="text/javascript" src="../../script/echo.min.js"></script>
<script type="text/javascript">
    var select_num= 0;
    var dialogBox;
    function selectedLi(el){
        var check = el.checked;
        var label = el.parentElement;
        if(check){
            select_num++;
            if(select_num>9){
                el.checked=false;
                select_num--;
                showDialog();
                return;
            }
            label.style.backgroundColor="#76CA78";
            label.style.color="#ffffff";
        }else{
            select_num--;
            label.style.backgroundColor="#ffffff";
            label.style.color="#000000";
        }
        document.getElementById('select_num').innerHTML=select_num;

    }
    var input = document.getElementsByTagName("input");
    for(var i=0;i<input.length;i++){
        input[i].onclick=function(){
            selectedLi(this);
        }
    }

    apiready = function () {
        api.showProgress({title: '努力加载中...',text: '先喝杯茶...'});
        dialogBox = api.require('dialogBox');
         api.hideProgress();
    };


    function showDialog(){

        dialogBox.alert ({
            texts: {
                title: '提示',
                content:'所选兴趣项已达上限。提高积分等级，可增加选择兴趣类别数量',
                rightBtnTitle: '确定'
            },
            styles:{
                bg: '#fff',
                w: 300,
                title:{
                    marginT : 20,
                    titleSize : 16,
                    titleColor : '#76CA78'
                },
                content:{
                    color: '#000',
                    size: 16
                },
                right:{
                    w: 300,
                    h: 35,
                    marginL: 0,
                    marginB: 0,
                    corner: 2,
                    bg: '#76CA78',
                    size: 16,
                    color:'#ffffff'
                }
            }
        },function(ret){
            if (ret.eventType == 'right') {
                var dialogBox = api.require('dialogBox');
                dialogBox.close ({
                    dialogName: 'alert'
                });
            }
        });
    }

    function login(){
        openNewWindow("userType","../user/userType.html",{})
    }
</script>
</body>
</html>