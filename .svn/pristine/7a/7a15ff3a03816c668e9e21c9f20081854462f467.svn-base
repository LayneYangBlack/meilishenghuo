<script type="text/javascript">
    var apiMap = null;
    var radius = 1000;
    var apiLocal = null;
    var user = null;
    var localInfo = null;
    apiready = function(){
        api.showProgress({title: '努力加载中...',text: '先喝杯茶...'});
        var width = api.frameWidth;
        var height = api.frameHeight*0.79;
        var top = api.frameHeight*0.08;
        var local = $api.getStorage("localInfo");
        localInfo = local;
        user = api.pageParam.user;
        var map = api.require('bMap');
        apiMap = map;
        apiLocal = local;
            map.open({
                rect: {
                    x: 0,
                    y: top + 22,
                    w: width,
                    h: height
                },
                center: {
                    lon: local.lon,
                    lat: local.lat
                },
                zoomLevel: 12,
                showUserLocation: true,
                fixedOn: api.frameName,
                fixed: false
            }, function (ret) {
                if (ret.status) {
                    map.showUserLocation({
                        isShow: true,
                        trackingMode: 'none'
                    });

                    addEve(map)
                }
            });
            api.openFrame({
                name: 'mapIcon',
                url: './mapIcon.html',
                rect: {
                    x: (api.winWidth) / 2-15,
                    y: ((api.frameHeight) * 0.79) / 2+top+22+15,
                    w: 30,
                    h: 30
                },
                pageParam: {
                    name: 'test'
                },
                bounces: false,
                bgColor: 'rgba(0,0,0,0 )',
                vScrollBarEnabled: true,
                hScrollBarEnabled: true
            });
        api.hideProgress();
    };


    function commit(){
        var address = document.getElementById("seat").innerHTML;
        var params = {};
        params.address = address;
        params.lon = apiLocal.lon;
        params.lat = apiLocal.lat;
        params.radius = radius/1000;
        //异步调用
        api.execScript({
            name:'mallInfo',
            frameName: 'mallInfo_body',
            script: 'showAddress('+JSON.stringify(params)+')'
        });
        closeWin();
    }


    function confirmInput(){
        var text = document.getElementById('text-input').value;
        if(isBlack(localInfo)){
            localInfo = {city:'北京'}
        }
        apiMap.searchInCity({
            city:localInfo.city,
            keyword: text,
            pageIndex: 0,
            pageCapacity: 20
        },function(ret, err){

            if(ret.status){
                var data = setMapPointList(ret.results);
                var allResultList = {};
                for(var i = 0;i< data.length;i++){
                    allResultList[data[i].id] = data[i];
                }
                apiMap.setCenter({
                    coords: {
                        lon: data[0].lon,
                        lat:  data[0].lat
                    },
                    animation:true
                });
                apiMap.addAnnotations({
                    annotations: data,
                    draggable: true
                }, function(ret){
                    if(ret){
                        document.getElementById('seat').innerHTML = allResultList[ret.id].address;
                        apiLocal =  allResultList[ret.id];
                        apiMap.setCenter({
                            coords: {
                                lon: apiLocal.lon,
                                lat:  apiLocal.lat
                            },
                            animation:false
                        });
                    }
                });
            }else{
                switch (err.code){
                    case 1:toast("检索词有岐义");
                    case 2:toast("检索地址有岐义");
                    case 3:toast("没有找到检索结果");
                    case 4:toast("搜索关键词错误");
                    case 5:toast("网络连接错误");
                    case 6:toast("网络连接超时");
                }
            }
        });
        document.getElementById('seat').innerHTML = text;
        boxHide();
    }


    function returnPrev(){
        closeWin();
    }
</script>
